---
// src/components/Hero.astro
---

<section id="home" class="relative h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-amber-50 overflow-hidden">
  <div class="absolute inset-0 opacity-20">
    <div class="absolute top-0 left-0 w-full h-full bg-[url('/assets/pattern.svg')] bg-repeat opacity-10"></div>
  </div>
  
  <div class="container mx-auto px-6 z-10">
    <div class="max-w-2xl mx-auto text-center">
      <h1 class="hero-title text-5xl md:text-6xl font-bold text-gray-800 mb-6">
        Premium <span class="text-amber-600">Sunglasses</span> for Every Style
      </h1>
      <p class="hero-subtitle text-xl text-gray-600 mb-10">
        Discover our exclusive collection with 100% UV protection and polarized lenses.
      </p>
      <div class="hero-cta">
        <a href="#pricing" class="inline-block bg-amber-600 text-white px-8 py-4 rounded-full text-lg font-medium hover:bg-amber-700 transition shadow-lg hover:shadow-xl">
          Explore Collection
        </a>
      </div>
    </div>
  </div>
  
  <div class="absolute bottom-10 left-0 right-0 flex justify-center">
    <a href="#about" class="animate-bounce text-gray-600 hover:text-amber-600">
      <i class="fas fa-chevron-down text-2xl"></i>
    </a>
  </div>
</section>