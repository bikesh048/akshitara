---
// src/components/About.astro
const locations = [
  {
    city: "New York",
    address: "123 Fashion Ave, Manhattan, NY 10001",
    hours: "Mon-Sat: 9AM - 8PM, Sun: 11AM - 6PM",
    image: "/assets/nyc-store.jpg",
    features: ["VIP Fitting Rooms", "Exclusive Collections", "Stylist Consultations"]
  },
  {
    city: "Los Angeles",
    address: "456 Sunset Blvd, West Hollywood, CA 90069",
    hours: "Mon-Sat: 10AM - 9PM, Sun: 12PM - 7PM",
    image: "/assets/la-store.jpg",
    features: ["Celebrity Clients", "Custom Fittings", "Rooftop Lounge"]
  },
  {
    city: "Miami",
    address: "789 Ocean Dr, Miami Beach, FL 33139",
    hours: "Mon-Sun: 10AM - 10PM",
    image: "/assets/miami-store.jpg",
    features: ["Beachfront Location", "Seasonal Collections", "Private Events"]
  }
];
---

<section id="about" class="py-20 bg-white">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-800 mb-4">Our Locations</h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Visit our flagship stores in these premium locations for a personalized shopping experience.
      </p>
    </div>
    
    <div class="grid md:grid-cols-3 gap-10">
      {locations.map((location, index) => (
        <div class={`about-section bg-gray-50 rounded-xl overflow-hidden shadow-lg transition-all hover:shadow-xl hover:-translate-y-2 delay-${index * 100}`}>
          <div class="h-48 overflow-hidden">
            <img src={location.image} alt={`${location.city} store`} class="w-full h-full object-cover" />
          </div>
          <div class="p-6">
            <h3 class="text-2xl font-bold text-gray-800 mb-2">{location.city}</h3>
            <div class="flex items-center text-gray-600 mb-4">
              <i class="fas fa-map-marker-alt mr-2 text-amber-600"></i>
              <p>{location.address}</p>
            </div>
            <div class="flex items-center text-gray-600 mb-4">
              <i class="fas fa-clock mr-2 text-amber-600"></i>
              <p>{location.hours}</p>
            </div>
            <ul class="space-y-2 mb-6">
              {location.features.map(feature => (
                <li class="flex items-center">
                  <i class="fas fa-check-circle text-amber-600 mr-2"></i>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
            <button class="w-full bg-amber-600 text-white py-2 rounded-lg hover:bg-amber-700 transition">
              Get Directions
            </button>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>