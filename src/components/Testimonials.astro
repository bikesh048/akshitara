---
import { Image } from 'astro:assets';
import testimonial1Image from '../assets/images/testimonial1.jpg'
import testimonial2Image from '../assets/images/testimonial2.jpg'
import testimonial3Image from '../assets/images/testimonial3.jpg'

const testimonials = [
  {
    name: "Alexandra Chen",
    role: "Fashion Designer",
    quote: "Working with Fashion Events has transformed my career. Their attention to detail and industry connections are unparalleled.",
    image: testimonial1Image
  },
  {
    name: "Marcus James",
    role: "Creative Director",
    quote: "The team creates magical experiences that perfectly showcase our brand vision. We've partnered with them for 5 years straight.",
    image: testimonial2Image
  },
  {
    name: "Sofia Rodriguez",
    role: "Model Agency Founder",
    quote: "From logistics to creative direction, they handle everything with professionalism and innovation.",
    image: testimonial3Image
  }
];
---

<section id="testimonials" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-display font-bold mb-4">What Industry Leaders Say</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">Hear from the professionals who have experienced our events firsthand.</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {testimonials.map((testimonial, index) => (
        <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-lg transition-shadow testimonial-card">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-16 h-16 rounded-full overflow-hidden">
              <Image src={testimonial.image} alt={testimonial.name} class="w-full h-full object-cover"/>
            </div>
            <div>
              <h3 class="font-bold text-lg">{testimonial.name}</h3>
              <p class="text-gray-500">{testimonial.role}</p>
            </div>
          </div>
          <p class="text-gray-600 italic">&ldquo;{testimonial.quote}&rdquo;</p>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';
  
  gsap.registerPlugin(ScrollTrigger);
  
  // Testimonial cards animation
  gsap.from('.testimonial-card', {
    opacity: 0,
    y: 50,
    duration: 0.8,
    stagger: 0.2,
    scrollTrigger: {
      trigger: '#testimonials',
      start: 'top 70%',
    }
  });
</script>