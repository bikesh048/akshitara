---
// src/components/Pricing.astro
const collections = [
  {
    name: "Classic Collection",
    price: "$129 - $199",
    description: "Timeless designs with premium UV protection",
    features: ["Polarized lenses", "Lightweight frames", "1-year warranty"],
    popular: false
  },
  {
    name: "Premium Collection",
    price: "$229 - $349",
    description: "Luxury materials and advanced lens technology",
    features: ["Polarized + anti-reflective", "Titanium frames", "2-year warranty", "Free cleaning kit"],
    popular: true
  },
  {
    name: "Designer Collection",
    price: "$399 - $599",
    description: "Exclusive designer collaborations",
    features: ["Handcrafted frames", "Custom lens options", "3-year warranty", "VIP styling session", "Priority service"],
    popular: false
  }
];
---

<section id="pricing" class="py-20 bg-gray-50">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-800 mb-4">Our Collections</h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Find the perfect pair for your style and budget with our curated collections.
      </p>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      {collections.map((collection, index) => (
        <div class={`pricing-card relative bg-white rounded-xl overflow-hidden shadow-lg transition-all hover:shadow-xl hover:-translate-y-2 ${collection.popular ? 'border-2 border-amber-500' : ''}`}>
          {collection.popular && (
            <div class="absolute top-0 right-0 bg-amber-500 text-white px-4 py-1 text-sm font-bold rounded-bl-lg">
              POPULAR
            </div>
          )}
          <div class="p-8">
            <h3 class="text-2xl font-bold text-gray-800 mb-2">{collection.name}</h3>
            <p class="text-gray-600 mb-6">{collection.description}</p>
            
            <div class="mb-8">
              <span class="text-4xl font-bold text-amber-600">{collection.price}</span>
            </div>
            
            <ul class="space-y-3 mb-8">
              {collection.features.map(feature => (
                <li class="flex items-start">
                  <i class="fas fa-check-circle text-amber-600 mt-1 mr-2"></i>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
            
            <button class={`w-full py-3 rounded-lg font-medium transition ${collection.popular ? 'bg-amber-600 text-white hover:bg-amber-700' : 'bg-gray-100 text-gray-800 hover:bg-gray-200'}`}>
              View Showroom
            </button>
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-16 text-center">
      <h3 class="text-2xl font-bold text-gray-800 mb-4">Need Help Choosing?</h3>
      <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
        Our style consultants can help you find the perfect pair based on your face shape, lifestyle, and preferences.
      </p>
      <button class="inline-block bg-gray-800 text-white px-8 py-3 rounded-lg font-medium hover:bg-gray-900 transition">
        Book a Virtual Consultation
      </button>
    </div>
  </div>
</section>