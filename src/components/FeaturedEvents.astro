---
const events = [
  {
    title: "Paris Fashion Week",
    date: "June 15-22, 2025",
    image: "/images/event1.jpg",
    description: "Our flagship event featuring the latest collections from world-renowned designers."
  },
  {
    title: "Milan Designer Showcase",
    date: "August 5-10, 2025",
    image: "/images/event2.jpg",
    description: "An exclusive showcase of emerging designers from around the world."
  },
  {
    title: "New York Fashion Gala",
    date: "October 18-23, 2025",
    image: "/images/event3.jpg",
    description: "A celebration of fashion innovation and sustainable practices."
  },
];
---

<section id="events" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-display font-bold mb-4">Featured Events</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">Discover our upcoming fashion events that are setting trends and transforming the industry.</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {events.map((event, index) => (
        <div class="bg-secondary rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-shadow fade-in">
          <div class="h-64 overflow-hidden">
            <div class="w-full h-full bg-cover bg-center" style={`background-image: url(${event.image})`}></div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">{event.title}</h3>
            <p class="text-accent font-medium mb-4">{event.date}</p>
            <p class="text-gray-600 mb-6">{event.description}</p>
            <a href="#" class="inline-block font-medium text-accent hover:underline">Learn more â†’</a>
          </div>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <a href="#" class="inline-block bg-primary text-white font-medium py-3 px-8 rounded hover:bg-primary/90 transition-colors">View All Events</a>
    </div>
  </div>
</section>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';
  
  gsap.registerPlugin(ScrollTrigger);
  
  // Staggered card animations
  gsap.from('#events .fade-in', {
    opacity: 0,
    y: 50,
    duration: 1,
    stagger: 0.2,
    scrollTrigger: {
      trigger: '#events',
      start: 'top 70%',
    }
  });
</script>